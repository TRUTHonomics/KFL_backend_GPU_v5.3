# KFL Backend GPU v5 - Environment Variables
# ===========================================
# Kopieer dit bestand naar .env.local en pas aan indien nodig:
#   cp env.example .env.local

# ==============================================================
# Database configuratie
# ==============================================================
DB_HOST=10.10.10.3
DB_PORT=5432
DB_NAME=kflhyper
DB_USER=kfl_gpu_backfill
DB_PASS=1234

# Alternative PostgreSQL environment variable names (voor compatibiliteit)
POSTGRES_HOST=10.10.10.3
POSTGRES_PORT=5432
POSTGRES_DB=kflhyper
POSTGRES_USER=kfl_gpu_backfill
POSTGRES_PASSWORD=1234

# Database URL (volledige connection string)
DATABASE_URL=postgresql://kfl_gpu_backfill:1234@10.10.10.3:5432/kflhyper

# ==============================================================
# GPU configuratie
# ==============================================================
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# CuPy optimizations
CUPY_CACHE_IN_MEMORY=1

# Numba optimizations
NUMBA_CACHE_DIR=/app/.numba_cache
NUMBA_NUM_THREADS=16
